{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Clang Build Program",
      "type": "shell",
      "command": "cmake -Bbuild -DCMAKE_BUILD_TYPE=Debug  ; cmake --build build ",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Clang Test Program",
      "type": "shell",
      "command": "cmake -Bbuild -DCMAKE_BUILD_TYPE=Debug  ; cmake --build build ; ctest -T memcheck --test-dir build ",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
